<%= render "layouts/flash_messages" %>

<h1>Articals</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articals.each do |artical| %>
      <tr>
        <td><%= artical.title %></td>
        <td><%= artical.body[0...70] %></td>
        <td><%= artical.user.email %></td>
        <td><%= link_to 'Show', artical, class:"btn btn-primary text-white" %></td>
        <td><%= link_to 'Edit', edit_artical_path(artical), class:"btn btn-warning text-white" if !session[:user].nil? %></td>
        <td><%= link_to 'Destroy', artical, method: :delete, data: { confirm: 'Are you sure?' } ,class:"btn btn-danger  text-white" if !session[:user].nil? %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Artical', new_artical_path, class:"btn btn-dark text-white"  %>
